#
# PGPASS file generated by ansible
#
# {{ postgresql_username }}
*:{{ postgresql_port}}:*:{{ postgresql_username }}:{{ postgresql_password }}
#
# Databases users
#
{% for db in postgresql_databases %}
*:{{ postgresql_port}}:{{ db.dbname }}:{{ db.dbuser }}:{{ db.dbuserpwd }}
{% endfor%}
#
# Repmgr user
#
*:{{ postgresql_port}}:{{ postgresql_repmgr_dbname }}:{{ postgresql_repmgr_user }}:{{ postgresql_repmgr_password }}
